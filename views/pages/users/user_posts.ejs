<%- include("../../partials/header.ejs", {
    image_url : `https://mii-secure.cdn.nintendo.net/${view_user.mii_hash}_normal_face.png`,
    title : `Aquamarine - ${view_user.mii_name}'s Posts`,
	description : ""
}) -%>

<body>
	<%- include("../../partials/elements/navbar.ejs") -%>

	<div class="wrapper">
		<div class="user-wrapper">
			<%- include("../../partials/elements/ugc/user_sidebar.ejs", {
				view_user : view_user,
				view_user_stats : view_user_stats,
                all_posts : true,
                all_empathies : false
			}) -%>

			<div class="main-column fill">
				<div class="user-posts">
					<div class="header guide">
						<span>Posts</span>
					</div>

					<div class="list">
						<% var last_community_id; var show_community; for (const post of view_user_posts) {
							if (last_community_id === post.community_id) { show_community = false } else { show_community = true } %>
						<%- include("../../partials/elements/ugc/posts.ejs", {
                                post : post,
								show_community : show_community
                        }) -%>
						<% last_community_id = post.community_id } %>

						<% if (view_user_posts.length <= 0) { %>
						<span class="no-posts">No posts were found.</span>
						<% } %>
					</div>
					<span class="loading none"></span>
				</div>
			</div>
		</div>
	</div>

	<%- include("../../partials/elements/footer.ejs") -%>
</body>