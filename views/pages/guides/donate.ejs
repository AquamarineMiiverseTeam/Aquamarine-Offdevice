<%- include("../../partials/header.ejs", {
    image_url : "",
    title : `Aquamarine - Donate`,
    description : ""
}) -%>

<body>
	<%- include("../../partials/elements/navbar.ejs") -%>

	<div class="wrapper">
		<div class="user-wrapper">
			<% if (!locals.guest_mode) { %>
			<%- include("../../partials/elements/ugc/user_sidebar.ejs", {
					view_user : locals.user,
					view_user_stats : locals.user_stats,
					all_posts : false,
					all_empathies : false
			}) -%>
			<% } else { %>
			<div class="user-sidebar">
				<%- include("../../partials/elements/guides/sign_in.ejs") -%>
			</div>
			<% } %>


			<div class="main-column fill guide">
				<div class="header guide">
					<span>Donate to Aquamarine</span>
				</div>
				<div class="spacer">
					<h1 class="opening">Become a Aquamarine Donator</h1>
					<p>
						Hello there. Would you like to give a small amount of money to the Aquamarine developers for putting in their time and effort into this project?
						<br><br>
						Well, this page is the right one for you!
					</p>
					<h2 class="num1">How can I donate?</h2>
					<p>
						Currently, you can't. Sorry! We'll make this a feature as soon as we can.
						<br><br>
						For now, feedback is the best way to support Aquamarine and make this project the best it can be!
					</p>
				</div>
			</div>
		</div>
	</div>

	<%- include("../../partials/elements/footer.ejs") -%>
</body>