<%- include("../partials/header.ejs", {
    image_url : "",
    title : "",
    description : ""
}) -%>

<body>
    <%- include("../partials/elements/navbar.ejs") %>

    <div class="wrapper">
        <div class="about-aquamarine">
            <div class="about-wrapper">
                <div class="about-paragraph">
                    <h1>Welcome to Aquamarine!</h1>
                    <p>Aquamarine is a Miiverse Revival aiming to replicate both the feel, and look of Miiverse, while still retaining features of modern social media. Aquamarine's signature color, aqua, represents a refreshing experience for all walks of life.</p>

                    <div class="about-actions-wrapper">
                    
                        <a href="/login"><span>Sign in</span></a>
                        
                        <a href=""><span>Installation</span></a>
                    </div>
                </div>

                <div class="about-image">
                    <img src="/img/AquamarineDemoWWP.png">
                </div>
            </div>
        </div>

        <div class="index-communities-wrapper">
            <div class="communities">
                <div class="popular-communities">
                    <% for (const community of popular_communities) { %>
                        <%- include("../partials/elements/database-elements/community.ejs", {
                            community : community,
                            include_banner : true
                        }) %>
                    <% } %>
                </div>
    
                <div class="newest-communities wiiu">
                    <% for (const community of newest_communities_wiiu) { %>
                        <%- include("../partials/elements/database-elements/community.ejs", {
                            community : community,
                            include_banner : false
                        }) %>
                    <% } %>
                </div>

                <div class="newest-communities 3ds">
                    <% for (const community of newest_communities_3ds) { %>
                        <%- include("../partials/elements/database-elements/community.ejs", {
                            community : community,
                            include_banner : false
                        }) %>
                    <% } %>
                </div>
            </div>

            <div class="extra-content">

            </div>
        </div>
    </div>

    <%- include("../partials/elements/footer.ejs") -%>
</body>