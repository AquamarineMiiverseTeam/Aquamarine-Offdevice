<%- include("../partials/header.ejs", {
    image_url : "",
    title : "",
    description : ""
}) -%>

<body>
    <%- include("../partials/elements/navbar.ejs") %>

    <div class="wrapper">
        <div class="about-aquamarine">
            <div class="about-wrapper">
                <div class="about-paragraph">
                    <h1>Welcome to Aquamarine!</h1>
                    <p>Aquamarine is a Miiverse Revival aiming to replicate both the feel, and look of Miiverse, while still retaining features of modern social media. Aquamarine's signature color, aqua, represents a refreshing experience for all walks of life.</p>

                    <div class="about-actions-wrapper">
                    
                        <a href="/login"><span>Sign in</span></a>
                        
                        <a href=""><span>Installation</span></a>
                    </div>
                </div>

                <div class="about-image">
                    <img src="/img/AquamarineDemoWWP.png">
                </div>
            </div>
        </div>

        <div class="index-communities-wrapper">
            <div class="popular-communities">
                <% for (const community of popular_communities) { %>
                    <div class="community" id="community-<%= community.id %>" data-href="/communities/<%= community.id %>">
                        <a href="/communities/<%= community.id %>">
                            <img class="banner" src="<%= community.cdn_ctr_banner_url %>">
                        </a>

                        <div class="community-info trigger">
                            <div class="icon-wrapper">
                                <img class="icon" src="<%= community.cdn_icon_url %>">
                            </div>
                            <div class="community-meta">
                                <span class="name trigger"><%= community.name %></span>
                                <span class="platform <%= community.platform %>"><% switch (community.platform) {
                                    case "wiiu":%>
                                        Wii U Games
                                        <%break;
                                    case "3ds":%>
                                        Nintendo 3DS Games
                                        <%break;
                                    case "both":%>
                                        Wii U/3DS Games
                                        <%break;
                                    case "vc":%>
                                        Virtual Console Games
                                        <%break;
                                    case "topic":%>
                                        General Topic
                                        <%break;
                                    case "wii":%>
                                        Wii Games
                                        <%break;
                                } %></span>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include("../partials/elements/footer.ejs") -%>
</body>