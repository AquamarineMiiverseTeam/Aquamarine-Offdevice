<div class="post trigger <%= (post.title_owned) ? "ingame" : "" %>" id="post-<%= post.id %>" data-href="/posts/<%= post.id %>">
	<% if (show_community) { %>
	<div class="community-wrapper">
		<img src="<%= post.cdn_icon_url %>" alt="<%= post.community_name %>">
		<a class="trigger no-bg" href="/communities/<%= post.community_id %>"><%= post.community_name %></a>
	</div>
	<% } %>

	<div class="post-content-wrapper">
		<div class="user-info">
			<a href="/users/<%= post.nnid %>">
				<% switch (post.feeling_id) {
                        case 0:%>
				<img src="https://mii-secure.cdn.nintendo.net/<%= post.mii_hash %>_normal_face.png" class="user-icon" onerror="this.src='../../../img/mii_null.png'" alt="<%= post.mii_name %>">
				<% break;
                        case 1:%>
				<img src="https://mii-secure.cdn.nintendo.net/<%= post.mii_hash %>_happy_face.png" class="user-icon" onerror="this.src='../../../img/mii_null.png'" alt="<%= post.mii_name %>">
				<% break;
                        case 2:%>
				<img src="https://mii-secure.cdn.nintendo.net/<%= post.mii_hash %>_like_face.png" class="user-icon" onerror="this.src='../../../img/mii_null.png'" alt="<%= post.mii_name %>">
				<% break;
                        case 3:%>
				<img src="https://mii-secure.cdn.nintendo.net/<%= post.mii_hash %>_surprised_face.png" class="user-icon" onerror="this.src='../../../img/mii_null.png'" alt="<%= post.mii_name %>">
				<% break;
                        case 4:%>
				<img src="https://mii-secure.cdn.nintendo.net/<%= post.mii_hash %>_frustrated_face.png" class="user-icon" onerror="this.src='../../../img/mii_null.png'" alt="<%= post.mii_name %>">
				<% break;
                        case 5:%>
				<img src="https://mii-secure.cdn.nintendo.net/<%= post.mii_hash %>_puzzled_face.png" class="user-icon" onerror="this.src='../../../img/mii_null.png'" alt="<%= post.mii_name %>">
				<% break;
                        default:%>
				<img src="https://mii-secure.cdn.nintendo.net/<%= post.mii_hash %>_normal_face.png" class="user-icon" onerror="this.src='../../../img/mii_null.png'">
				<% break;
                    } %>
			</a>
			<div class="user-info-text">
				<a class="name" href="/users/<%= post.nnid %>"><%= post.mii_name %></a>
				<span class="timestamp"><%= locals.moment(post.create_time).fromNow() %></span>
			</div>
		</div>

		<div class="content">
			<% if (post.topic_tag) { %>
			<span class="topic_tag"><%= post.topic_tag %></span>
			<% } %>

			<% if (post.body) { %>
			<span><%= post.body %></span>
			<% } else { %>
			<img src="<%= post.painting_cdn_url %>">
			<% } %>
		</div>

		<% if (post.screenshot_cdn_url) { %>
		<img class="screenshot" src="<%= post.screenshot_cdn_url %>">
		<% } %>

		<div class="post-actions">
			<% if (locals.guest_mode || post.account_id == locals.user.id) { %>
			<button class="empathy disabled" disabled="true" data-post-id="<%= post.id %>">
				<span>Yeah!</span>
			</button>
			<% } else { %>
			<button class="empathy" data-post-id="<%= post.id %>" data-yeah-text="Yeah!" data-unyeah-text="Unyeah">
				<% if (post.empathied_by_user) { %>
				<span>Unyeah</span>
				<% } else { %>
				<span>Yeah!</span>
				<% } %>

			</button>
			<% } %>

			<span class="empathy-count"><%= post.empathy_count %></span>
			<span class="reply-count">0</span>
		</div>
	</div>
</div>