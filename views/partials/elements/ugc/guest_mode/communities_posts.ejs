<div class="community-post-list popular">
	<div class="header">
		<span>Popular Posts</span>
	</div>

	<div class="list">
		<% for (const post of popular_posts) { %>
		<%- include("../posts.ejs", {
                post : post,
                show_community : false
            }) -%>
		<% } %>

		<% if (popular_posts.length <= 0) { %>
		<span class="no-posts">There are no posts yet.</span>
		<% } %>
	</div>
</div>

